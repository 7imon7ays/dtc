function dtc {
  if [[ $* == *-not* ]]
  then
    if [[ -z $3 ]]
    then printf "directory to ignore not provided."
    elif [[ ! -d "$3" ]]
    then printf "directory to ignore '"$3"' not found."
    else
      grep -nr --exclude="*$3*" "$1" . | grep .d;
      printf $"\nignored $3";
    fi
  else
    grep -nr "$1" . | grep .d;
  fi
}
export dtc
