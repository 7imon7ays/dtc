# dtc to detect an expression in your file

function dtc {
  if [[ $* == *-not* ]];
  then
    if [[ -z $3 ]];
    then printf "directory to ignore not provided."
    else
      grep -nr --exclude="*$3*" "$1" . | grep .d;
      printf $"\nignored $3";
    fi
  else
    grep -nr "$1" . | grep .d;
  fi
}
export dtc
